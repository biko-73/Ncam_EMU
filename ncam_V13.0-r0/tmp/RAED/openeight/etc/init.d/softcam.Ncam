#!/bin/sh
case "$1" in
start)
	ulimit -s 1024
	/usr/bin/ncam --wait 0 --config-dir /etc/tuxbox/config --daemon --pidfile /tmp/ncam.pid --restart 2 --utf8
	;;
stop)
	kill `cat /tmp/ncam.pid` 2> /dev/null
	;;
restart|reload)
	$0 stop
	sleep 1
	$0 start
	;;
version)
	echo "13.0"
	;;
info)
	echo "Ncam 13.0"
	;;
*)
	echo "Usage: $0 start|stop|restart"
	exit 1
	;;
esac
exit 0
